---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import GithubRepoLink from "../../components/GithubRepoLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={`${SITE_TITLE} | Projects`}
      description="A collection of projects I've worked on."
    />
  </head>
  <body>
    <Header />
    <main class="flex min-h-screen flex-col items-center p-8">
      <h2 class="text-xl">Projects</h2>
      <section>
        <ul class="mt-4 grid grid-cols-1 gap-4 md:grid-cols-3">
          {
            projects.map((project) => (
              <li class="group flex flex-col gap-8 rounded-xl border-2 border-foreground px-4 py-4 transition-colors hover:border-emerald md:col-span-1">
                <a
                  class="flex flex-col gap-4"
                  href={`/projects/${project.slug}`}
                >
                  <span class="mt-4 text-lg font-bold decoration-2 underline-offset-4 group-hover:underline">
                    {project.data.title}
                  </span>
                  <p class="h-6 text-sm group-hover:underline">
                    {project.data.description}{" "}
                  </p>
                </a>
                <GithubRepoLink repo={project.data.title} />
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
