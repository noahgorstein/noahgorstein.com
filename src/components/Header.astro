---
import HeaderLink from "./HeaderLink.astro";
import ThemeSelect from "./ThemeSelect.tsx";
import { SITE_TITLE } from "../consts";
---

<header class="border-b border-foreground/10 px-8">
  <nav
    class="flex flex-col items-center justify-between gap-4 py-8 md:flex-row md:gap-0"
  >
    <div class="flex flex-row gap-2">
      <h2
        class="flex items-center justify-center text-lg font-bold hover:text-active"
      >
        <a href="/" class="flex flex-row gap-2">{SITE_TITLE}</a>
      </h2>
    </div>
    <div class="flex gap-4">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/photos">Photos</HeaderLink>
      <div class="min-h-[44px] min-w-[44px] content-center">
        <ThemeSelect client:only />
      </div>
    </div>
  </nav>
</header>
